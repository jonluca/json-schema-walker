{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES2022",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["es2022"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist", "coverage", "bin"],
  "include": ["src"]
}
